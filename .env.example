# Planora.ai Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:5173
VITE_SITE_URL=http://localhost:5173

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_APPLE_AUTH=false
VITE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback

# ===========================================
# STRIPE CONFIGURATION (OPTIONAL)
# ===========================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================
# These are automatically set by Vite - no need to configure
# NODE_ENV=development
# DEV=true
# PROD=false

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Never use production keys in development
# 2. Keep your .env file out of version control
# 3. Use different keys for different environments
# 4. Regularly rotate your API keys
# 5. Supabase anon key is safe to expose (it's public by design)
# 6. Never expose service role keys in frontend code
